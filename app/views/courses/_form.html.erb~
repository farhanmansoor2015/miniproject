<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :coursecode %><br>
    <%= f.text_field :coursecode %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :offersemester %><br>
    <%= f.text_field :offersemester %>
  </div>
  <div class="field">
    <%= f.label :objectives %><br>
    <%= f.text_field :objectives %>
  </div>
  <div class="field">
    <%= f.label :program_id %><br>
    <%= f.text_field :program_id %>
  </div>
</div>
  <div class="field">
   <%= f.label :start %><br>
   <%= f.date_select :start %>
  </div>
<div class="field">
   <%= f.label :end %><br>
   <%= f.date_select :end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
