<p id="notice"><%= notice %></p>

<h1>Listing Faculties</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Specialization</th>
      <th>Dateofbirth</th>
      <th>Designation</th>
      <th>Qualification</th>
      <th>Address</th>
      <th>Local</th>
      <th>Contact</th>
      <th>Status</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.firstname %></td>
        <td><%= faculty.lastname %></td>
        <td><%= faculty.specialization %></td>
        <td><%= faculty.dateofbirth %></td>
        <td><%= faculty.designation %></td>
        <td><%= faculty.qualification %></td>
        <td><%= faculty.address %></td>
        <td><%= faculty.local %></td>
        <td><%= faculty.contact %></td>
        <td><%= faculty.status %></td>
        <td><%= faculty.email %></td>
        <td><%= link_to 'Show', faculty %></td>
        <td><%= link_to 'Edit', edit_faculty_path(faculty) %></td>
        <td><%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

